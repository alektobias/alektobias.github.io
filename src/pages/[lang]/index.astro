---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/common/Navbar.astro";
import Footer from "../../components/common/Footer.astro";
import HeroSection from "../../components/home/HeroSection.astro";
import JourneySection from "../../components/home/JourneySection.astro";
import SkillSets from "../../components/home/SkillSets.astro";
import TimelineSection from "../../components/home/TimelineSection.astro";
import ContactSection from "../../components/home/ContactSection.astro";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "es" } },
    { params: { lang: "fr" } },
    { params: { lang: "pt" } },
  ];
}

const { lang } = Astro.params;
---

<Layout
  title="Alek Tobias | Senior Full Stack Developer & Solution Architect"
  lang={lang}
  description="Senior Full Stack Engineer with 8+ years of experience. Specialist in JavaScript ecosystem (Node, Bun, React) and AWS infrastructure."
  summary="Battle-tested engineer delivering high-performance distributed systems at global scale. Expert in modernizing legacy infrastructures and AI-driven platforms."
>
  <main class="bg-black">
    <HeroSection lang={lang} />
    <JourneySection lang={lang} />
    <!-- <BlogShowcase /> -->
    <SkillSets lang={lang} />
    <!-- <ProjectsShowcase /> -->
    <TimelineSection lang={lang} />
    <ContactSection lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
