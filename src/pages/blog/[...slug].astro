---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import TableOfContents from "../../components/blog/TableOfContents";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content, headings } = await post.render();
---

<Layout title={post.data.title}>
  <main class="min-h-screen bg-background relative selection:bg-primary/30">
    {/* Ambient Backgroud Glows */}
    <div
      class="absolute -top-40 left-0 right-0 h-96 bg-primary/10 blur-[100px] pointer-events-none"
    >
    </div>

    <article
      class="container mx-auto px-4 py-12 lg:grid lg:grid-cols-[1fr_240px] gap-12 relative z-10"
    >
      <div class="max-w-3xl mx-auto w-full">
        <header class="mb-8 font-center">
          <a
            href="/blog"
            class="text-sm text-muted-foreground hover:text-primary transition-colors mb-6 inline-block"
            >← Back to Articles</a
          >

          <div
            class="flex items-center gap-3 text-sm text-muted-foreground mb-4"
          >
            <time dateTime={post.data.pubDate.toISOString()}>
              {
                post.data.pubDate.toLocaleDateString("en-us", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })
              }
            </time>
            {
              post.data.tags && (
                <>
                  <span>•</span>
                  <div class="flex gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="text-primary font-medium">{tag}</span>
                    ))}
                  </div>
                </>
              )
            }
          </div>

          <h1
            class="text-4xl md:text-5xl font-bold mb-6 leading-tight bg-clip-text text-transparent bg-gradient-to-r from-white to-white/70"
          >
            {post.data.title}
          </h1>
          <p class="text-xl text-muted-foreground leading-relaxed">
            {post.data.description}
          </p>
        </header>

        <hr class="border-white/10 my-8" />

        <div
          class="prose prose-invert prose-lg max-w-none text-gray-200
          prose-headings:font-bold prose-headings:text-white prose-headings:mb-6 prose-headings:mt-12
          prose-p:text-gray-300 prose-p:leading-relaxed prose-p:mb-6
          prose-a:text-primary hover:prose-a:text-primary/80
          prose-strong:text-white
          prose-pre:bg-secondary/50 prose-pre:border prose-pre:border-white/5 prose-pre:backdrop-blur-sm prose-pre:my-8 prose-pre:rounded-xl
          prose-li:text-gray-300 prose-li:marker:text-primary"
        >
          <Content />
        </div>

        <div
          class="mt-16 p-8 rounded-2xl bg-secondary/30 border border-white/5 backdrop-blur-md"
        >
          <h3 class="text-xl font-bold mb-2 text-white">
            Enjoyed this article?
          </h3>
          <p class="text-gray-300 mb-4">
            Let's continue the discussion on social media.
          </p>
          <div class="flex gap-4">
            <a
              href="#"
              class="px-4 py-2 bg-white/5 hover:bg-white/10 rounded-lg text-sm font-medium transition-colors border border-white/5"
              >Share on X</a
            >
            <a
              href="#"
              class="px-4 py-2 bg-white/5 hover:bg-white/10 rounded-lg text-sm font-medium transition-colors border border-white/5"
              >Share on LinkedIn</a
            >
          </div>
        </div>
      </div>

      <aside class="hidden lg:block">
        <TableOfContents client:idle headings={headings} />
      </aside>
    </article>
  </main>
</Layout>

<style is:global>
  @reference "../../styles/global.css";

  /* Style inline code only, respecting Shiki's block code */
  .prose :not(pre) > code {
    @apply text-primary bg-secondary/50 px-1.5 py-0.5 rounded border border-white/10 font-mono text-sm;
  }
</style>
