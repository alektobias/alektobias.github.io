---
const projects = [
  {
    title: "Project Alpha",
    description: "High-performance AI platform.",
    tech: ["Next.js", "Python", "AWS"],
    image: "bg-purple-900/40"
  },
  {
    title: "Project Beta",
    description: "Seamless e-commerce integration.",
    tech: ["TypeScript", "Shopify", "Tailwind"],
    image: "bg-pink-900/40"
  },
  {
    title: "Project Gamma",
    description: "Real-time analytics dashboard.",
    tech: ["React", "PostgreSQL", "D3.js"],
    image: "bg-blue-900/40"
  }
];

import { SectionTitle } from "../ui/SectionTitle";
---

<section class="py-24 bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-end mb-12">
      <div>
        <SectionTitle
          title="Selected Projects"
          subtitle="A showcase of architectural excellence and problem-solving through code."
        />
      </div>
      <a href="/projects" class="text-purple-400 hover:text-purple-300 font-medium hidden md:block">
        View Project Archive â†’
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group relative rounded-2xl overflow-hidden border border-white/5 bg-gray-900 transition-all hover:border-purple-500/50">
           <!-- Project Image Placeholder -->
           <div class={`absolute inset-0 ${project.image} opacity-50 group-hover:scale-105 transition-transform duration-700`}></div>
           
           <!-- Content Overlay -->
           <div class="absolute inset-0 bg-linear-to-t from-gray-950 via-transparent to-transparent opacity-80"></div>
           
           <div class="absolute bottom-0 left-0 right-0 p-6 translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-gray-400 text-sm mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tech.map((skill) => (
                  <span class="text-[10px] uppercase tracking-wider bg-white/5 px-2 py-1 rounded-sm border border-white/10">
                    {skill}
                  </span>
                ))}
              </div>
           </div>
        </div>
      ))}
    </div>
  </div>
</section>
